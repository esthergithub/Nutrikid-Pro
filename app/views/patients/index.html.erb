<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Patients</h1>

  <div class="table-responsive">
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th>Patient name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Category</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.patient_name %></td>
          <td>
          <% if patient.image_url %>
            <%= image_tag patient.image_url, style:"width:100px;height:100px;" %>
          <% end %></td>
          <td><%= patient.description %></td>
          <td><%= patient.category.name %></td>
          <td><%= patient.user.email %></td>
          <td><%= link_to 'Show', patient %></td>
          <%if patient.user.email == current_user.email %>
            <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
            <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <br>

  <%= link_to 'New Patient', new_patient_path %>
</div>
