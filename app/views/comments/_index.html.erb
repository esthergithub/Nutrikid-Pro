<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p><%= link_to "Edit comment", edit_patient_comment_path(patient, comment), remote: true %></p>
        <!-- Addendum -->
        <p><%= link_to "Delete comment", patient_comment_path(comment.patient_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Do you really want to delete this?"} %></p>
        <!-- So far -->
      </li>
    <% end %>
  <% end %>
</ul>

